{
  "project": "winHelp",
  "version": "2.0.0",
  "features": {
    "software_install": true,
    "debloat": true,
    "backup_restore": true,
    "system_setup": true
  },
  "settings": {
    "log_level": "INFO",
    "theme": "Dark",
    "backup_dir": "system-backup",
    "user": {
      "name": "User Name",
      "email": "user@email.com"
    },
    "setup": {
      "git_config": true,
      "install_tools": true,
      "fonts": true,
      "terminal_defaults": true,
      "editor_configs": true
    }
  },
  "modules": {
    "debloat": {
      "remove_preinstalled_apps": true,
      "remove_onedrive": true,
      "windows_feature_cleanup": false
    },
    "software": {
      "installer": "winget",
      "default_apps": [
        "Microsoft.PowerShell",
        "Fastfetch-cli.Fastfetch",
        "Git.Git"
      ]
    }
  }
}